PortSystem          1.0

PortGroup			github 1.0
github.setup		andmarti1424 sc-im 0.3.0 v
revision            0
maintainers         gmail.com:israelchauca
license				BSD
categories          finance
description         Spreadsheet Calculator Improvised - A terminal spreadsheet \
                    program
long_description    sc-im is a free curses-based spreadsheet program that uses \
                    key bindings similar to vi and less, based on the venerable sc.

platforms           darwin

set worksrcpath		${worksrcpath}/src
patchfiles			patch-Makefile.diff
use_configure       no
use_parallel_build  no
destroot.post_args	DESTDIR=${destroot} prefix=${prefix}

checksums           rmd160  a35f3e3b6f8eba9200cdd0d2447c493dd0172e4b \
                    sha256  812765f9a08581b2e44fd10c1f93b59044efc6283d0666328f1e53c17f10b073

depends_lib         port:ncurses \
					port:bison


pre-patch {
    reinplace -W ${worksrcpath} {s/ncursesw\///} cmds_edit.c cmds_command.c \
        cmds.c cmds_visual.c color.c file.c help.c history.c input.c macros.h \
        main.c maps.c interp.c range.c sort.c screen.c vmtbl.c xmalloc.c
}
