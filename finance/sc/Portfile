PortSystem            1.0
name                  sc
version               7.16
revision              0
categories            spelling
platforms             darwin
maintainers           gmail.com:israelchauca
description           Spreadsheet calculator
long_description      sc is a free curses-based spreadsheet program that uses \
                      key bindings similar to vi and less.
homepage              http://packages.debian.org/unstable/sc
master_sites          debian:s/${name}
distfiles             ${name}_${version}.orig${extract.suffix}
worksrcdir            ${name}-${version}
checksums             rmd160 15df3b73f224a54c22f59396ae2199a70c0ebb85 \
                      sha256 e541f98bcf78ded2de2ce336abda9705a24b6ce67fc82806107880bf6504642a

patchfiles            patch-Makefile.diff \
                      patch-debian.diff
patch.pre_args        -p1
use_configure         no
build.env-append      CFLAGS="${configure.cflags} [get_canonical_archflags]" \
                      LDFLAGS="${configure.ldflags} [get_canonical_archflags]"
build.args-append     prefix=${prefix}   \
                      CC=${configure.cc}
destroot.args-append  DESTDIR=${destroot} \
                      prefix=${prefix}

livecheck.type        regex
livecheck.url         ${homepage}
livecheck.regex       Package:\\s+${name}\\s+\\((\[0-9.\]+)
